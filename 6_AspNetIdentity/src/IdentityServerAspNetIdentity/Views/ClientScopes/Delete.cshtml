@model IdentityServerAspNetIdentity.ViewModels.ClientScopeEditViewModel

@{
    ViewData["Title"] = $"Delete '{Model.Scope}' by Client '{Model.ClientName}'";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Scope)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scope)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="form-group">
            <input asp-for="ReturnUrl_VmProperty" class="form-control" hidden="hidden" />
        </div>

        <div class="form-group">
            <input asp-for="ClientId" class="form-control" readonly="readonly" hidden="hidden" />
        </div>
        <div class="form-group">
            <input asp-for="Scope" class="form-control" readonly="readonly" hidden="hidden" />
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
