@model IdentityServerAspNetIdentity.ViewModels.ClientCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create <small>Client</small></h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <input asp-for="ClientId" class="form-control" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientSecrets" class="control-label"></label>
                <input asp-for="ClientSecrets" class="form-control" />
                <span asp-validation-for="ClientSecrets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllowedGrantTypes" class="control-label"></label>
                <select asp-for="AllowedGrantTypes" class="form-control" asp-items="@Model.SelectAllowedGrantTypes"></select>
                <span asp-validation-for="AllowedGrantTypes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AllowedScopes" class="control-label"></label>
                <input asp-for="AllowedScopes" class="form-control" />
                <span asp-validation-for="AllowedScopes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RedirectUris" class="control-label"></label>
                <input asp-for="RedirectUris" class="form-control" />
                <span asp-validation-for="RedirectUris" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PostLogoutRedirectUris" class="control-label"></label>
                <input asp-for="PostLogoutRedirectUris" class="form-control" />
                <span asp-validation-for="PostLogoutRedirectUris" class="text-danger"></span>
            </div>

            <input asp-for="ReturnUrl_VmProperty" class="form-control" hidden="hidden" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
